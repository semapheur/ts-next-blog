{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules/",
			".netlify/",
			".next/",
			"next.env.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off",
				"noForEach": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
      "semicolons": "asNeeded",
			"quoteStyle": "double",
			"jsxQuoteStyle": "double"
    }
	}
}
